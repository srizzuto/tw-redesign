<div class="right-container">
    <%= render partial: 'shared/header'%>
    <div class="d-flex w-100 h-100">
      <div class="w-100">
        <div class="cover-img align-middle">
          <%= image_tag(user.cover_image, class: "w-100 h-100")%>
        </div>
        <ul class="nav nav-tabs mb-3">
          <li class="dark-gray fw-bold border-bottom border-5 border-lightblue">TWEETS</li>
          <li class="gray">PHOTOS</li>
          <li class="gray">VIDEOS</li>
          <li class="gray">FOLLOWERS</li>
          <li class="gray">FOLLOWING</li>
          <li class="gray">FAVOURITES</li>
          <li class="gray">LISTS</li>
        </ul>
        <div>
          <div class="tw-something bg-white p-4">
            <p class="mb-4 lightblue fw-bold">LAST TWEETS</p>
            <div class="border-top">
            </div>
            <ul>
              <% user.opinions.order_by_most_recent.each do |opinion| %>
                <li>
                  <div class="d-flex">
                    <span><%= image_tag(opinion.author.photo, class: "f-pfp me-2")%></span>
                    <div>
                      <p class="my-1 fw-bold text-start dark-gray"><%= link_to(opinion.author.fullname, profile_path(opinion.author))%><span class="ms-1 gray"><%= opinion.created_at.strftime("%Y/%m/%d") %></span></p>
                      <p class="my-1"><%= opinion.text %></p>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>

        </div>
      </div>
    <%= render 'shared/aside_followed', user: user %>
    </div>
  </div>