<aside class="aside-opt">
  <div class="pfp-container">
    <div class="justify-content-center pt-4">
      <div class="d-flex justify-content-center">
        <div class="w-100 text-end me-1">
          <%= following_btn(user) %>
        </div>
        <%= image_tag(user.photo, class: "pfp text-center" )%>
          <div class="w-100 align-middle ms-1">
            <% if user.id==current_user.id %>
              <%= link_to "Edit" , edit_profile_path(user) %>
                <% end %>
          </div>
      </div>
      <div class="text-center dark-gray fw-bold mb-1">
        <%= user.fullname %>
      </div>
      <div class="text-center gray p-1">Joined at: <%= user.created_at.strftime("%Y/%m/%d") %>
      </div>
      <div class="d-flex h-100 gray border-top justify-content-evenly p-3">
        <div class="text-center">
          <p class="m-0 fw-bold dark-gray">
            <%= user.opinions.count %>
          </p>
          <p class="m-0">Tweets</p>
        </div>
        <div class="text-center px-3">
          <p class="m-0 fw-bold dark-gray">
            <%= user.followers.count %>
          </p>
          <p class="m-0">Followers</p>
        </div>
        <div class="text-center">
          <p class="m-0 fw-bold dark-gray">
            <%= user.following_users.count %>
          </p>
          <p class="m-0">Following</p>
        </div>
      </div>
    </div>
  </div>
  <div class="f-by">FOLLOWED BY
  </div>
  <ul class="gray text-center">
    <% user.followers.each do |follower|%>
      <li>
        <div class="d-flex justify-content-between">
          <div class="d-flex">
            <span><img src="/assets/images/blank-pfp.png" alt="" class="f-pfp me-2"></span>
            <span>
              <%= link_to profile_path(follower) do %>
                <p class="my-1 fw-bold text-start dark-gray">
                  <%= follower.fullname %>
                </p>
                <% end %>
                  <p class="my-1">Joined at: <%=user.created_at.strftime("%Y /%m/%d")%>
                  </p>
            </span>
          </div>
          <%= following_btn(follower) %>
        </div>
      </li>
      <% end %>
  </ul>
</aside>